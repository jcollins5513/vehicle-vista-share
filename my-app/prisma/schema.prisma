generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id            String   @id @default(uuid())
  stockNumber   String   @unique
  make          String
  model         String
  year          Int
  price         Float
  mileage       Int
  exteriorColor String?
  vin           String?  @unique
  trim          String?
  engine        String?
  transmission  String?
  bodyStyle     String?
  status        String   @default("available")
  sourceUrl     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  photos        String[]
  
  @@map("vehicles")
}

model ThreeSixtyImage {
  stockNumber String   @id
  imageUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
